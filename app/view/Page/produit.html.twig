{% extends 'Layout/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Produit</title>
{% endblock %}

{% block content %}

<!-- Bloc produits-->
<section class="w-100 h-100vh d-flex a-i-center j-c-around">
    <div class="d-flex j-c-center a-i-center h-50 w-50">
        <img class="w-75 h-auto" src="./assets/img/Bean-{{ result.COF_COLOR }}.png">
    </div>
    <div class="d-flex flex-direction-column j-c-evenly h-50 w-35">
        <div class="d-flex flex-direction-column">
            <a href="#" class="fs-30 color-3 text-decoration-none p-b-15">Informations géographiques</a>
            <span class="span-borders"></span>
        </div>
        <div class="d-flex flex-direction-row">
            <div class="w-35 p-t-20">
                <p class="fs-20">PRODUCTEUR</p>
                <p class="fs-20">PAYS</p>
                <p class="fs-20">REGION</p>
                <p class="fs-20">ALTITUDE</p>

            </div>
            <div class="w-65 p-t-20">
                {% if result.COF_OWNER != '' %}
                <p class="fs-20">{{ result.COF_OWNER }}</p>
                {% else %} 
                <p class="fs-20"> / </p>
                {% endif %}

                {% if result.COF_COUNTRY_ORIGIN != '' %}
                <p class="fs-20">{{ result.COF_COUNTRY_ORIGIN }}</p>
                {% else %} 
                <p class="fs-20"> / </p>
                {% endif %}

                {% if result.COF_REGION != '' %}
                <p class="fs-20">{{ result.COF_REGION }}</p>
                {% else %} 
                <p class="fs-20"> / </p>
                {% endif %}

                {% if result.COF_ALTITUDE != '' %}
                <p class="fs-20">{{ result.COF_ALTITUDE }}</p>
                {% else %} 
                <p class="fs-20"> / </p>
                {% endif %}
            </div>
        </div>
        <div class="d-flex flex-direction-column p-t-20">
            <a href="#" class="fs-30 color-3 text-decoration-none p-b-15">Notes</a>
            <span class="span-borders"></span>
        </div>
        <div class="d-flex flex-direction-row">
            <div class="w-35 p-t-20">
                <p class="fs-20">Arome (/10)</p>
                <p class="fs-20">Saveur (/10)</p>
                <p class="fs-20">Acidité (/10)</p>
                <p class="fs-20">Douceur (/10)</p>
            </div>
            <div class="w-65 p-t-20">
                <p class="fs-20">{{ result.COF_AROMA}}</p>
                <p class="fs-20">{{ result.COF_FLAVOR}}</p>
                <p class="fs-20">{{ result.COF_ACIDITY}}</p>
                <p class="fs-20">{{ result.COF_SWEETNESS}}</p>
            </div>
        </div> 

    </div>

</section>

