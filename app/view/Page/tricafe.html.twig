{% extends 'Layout/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Tri Café</title>
{% endblock %}

{% block content %}

<!-- Bloc découvrir cafés-->
<section class="bg-img-1 w-100 h-100vh d-flex a-i-center j-c-around">
    <div class="d-flex j-c-center a-i-center h-50 w-50 w-100-tablet">
        <img class="w-75 h-auto d-none-mobile" src="./assets/img/coffee-beans.png">
    </div>
    <div class="d-flex flex-direction-column j-c-between h-50 w-35 w-100-mobile j-c-center-tablet">
       
            <a href="#" class="fs-30 color-3 text-decoration-none encodeSansCondensed">Découvrir nos cafés</a>
            <span class="span-borders p-l-10 d-none-mobile"></span>
        
            <p class="fs-18 fw-bold color-4 Merriweather">Lorem ipsum dolor sit amet consectetur adipisicing elit. Iure, earum nam nostrum ipsam, reprehenderit similique maiores error.</p>
            <p class="fs-18 fw-bold color-4 Merriweather">Lorem ipsum dolor sit amet consectetur adipisicing elit. Iure, earum nam nostrum ipsam, reprehenderit similique maiores error.</p>
        
        <div class="d-flex flex-direction-row a-i-center j-c-between w-100">
            <img class="w-17 h-auto" src="./assets/img/badge_blue_green_green.png">
            <img class="w-17 h-auto" src="./assets/img/badge_blue_green.png">
            <img class="w-17 h-auto" src="./assets/img/badge_green.png">
            <img class="w-17 h-auto" src="./assets/img/badge_grey.png">
        </div>
        
    </div>
</section>

<!-- Bloc gammes-->
<section class="h-180vh d-flex flex-column-mobile j-c-center j-c-between-mobile m-t-50-mobile">
    <div class="d-flex j-c-evenly flex-direction-column w-100-mobile a-i-center">
        <div class="encodeSansCondensed h-35 d-flex flex-direction-column j-c-between a-i-center text-center">
            <p class="fs-30 color-3 text-decoration-none encodeSansCondensed">Découvrir nos gammes</p>
            <span class="span-borders-vertical80 d-none-mobile color-4"></span>
            <p class="fs-55 color-4">DUO REGES: CONSTRUCTIO INTERRETE</p>
            <p class="fs-55 color-4">NIHILO MAGIS. ROGES ENI</p>
            <p class="fs-55 color-4">DOLOR ERGO, ID EST</p>
        </div>
        <div class="d-flex flex-direction-column j-c-between h-50 w-85">

            <div class="p-t-50 encodeSansCondensed color-3">
                <!-- Bloc Tri Doux -->
                <p class="fs-20 fw-bold color-3">Doux</p>
                <div class="d-flex flex-direction-row p-t-20">
                    {% for coffee in sweetness %}
                    <a href="produit/{{coffee.ID}}" class="text-decoration-none">
                        <div class="d-flex flex-direction-column a-i-center w-100">
                            <img class="w-45 h-auto" src="./assets/img/bean-{{ coffee.COF_COLOR }}.png">
                            <p class="p-t-20 fs-18 color-3">{{  coffee.COF_COUNTRY_ORIGIN }}</p>
                            <p class="p-t-5 fs-18 color-3">{{  coffee.COF_OWNER }}</p>
                        </div>
                    </a>
                    {% endfor %}
                </div>
            </div>

            <div class="p-t-50 encodeSansCondensed color-3">
                <!-- Bloc Tri Corsé -->
                <p class="fs-20 fw-bold color-3">Corsé</p>
                <div class="d-flex flex-direction-row p-t-20">
                    {% for coffee in acid %}
                    <a href="produit/{{coffee.ID}}" class="text-decoration-none">
                        <div class="d-flex flex-direction-column a-i-center w-100">
                            <img class="w-45 h-auto" src="./assets/img/bean-{{ coffee.COF_COLOR }}.png">
                            <p class="p-t-20 fs-18 color-3">{{  coffee.COF_COUNTRY_ORIGIN }}</p>
                            <p class="p-t-5 fs-18 color-3">{{  coffee.COF_OWNER }}</p>
                        </div>
                    </a>
                    {% endfor %}
                </div>
            </div>

            <div class="p-t-50 encodeSansCondensed">
                <!-- Bloc Tri Equilibré -->
                <p class="fs-20 fw-bold color-3">Equilibré</p>
                <div class="d-flex flex-direction-row p-t-20">
                    {% for coffee in balance %}
                    <a href="produit/{{coffee.ID}}" class="text-decoration-none">
                        <div class="d-flex flex-direction-column a-i-center w-100">
                            <img class="w-45 h-auto" src="./assets/img/bean-{{ coffee.COF_COLOR }}.png">
                            <p class="p-t-20 fs-18 color-3">{{  coffee.COF_COUNTRY_ORIGIN }}</p>
                            <p class="p-t-5 fs-18 color-3">{{  coffee.COF_OWNER }}</p>
                        </div>
                    </a>
                    {% endfor %}
                </div>
            </div>

        </div>
                
    </div>
</section>

<!-- Bloc Ending-->
<section class="p-t-50 h-100vh d-flex flex-direction-column a-i-center">

    <!-- Bloc Citation -->
    <div class="w-85 h-35 d-flex flex-direction-column">
        <div class="w-45">
            <p class="fs-55 fw-bold encodeSansCondensed color-4">LOREM IPSUM DOLOR SIT</p>
            <p class="fs-55 fw-bold encodeSansCondensed color-4">AMET LOREM IPSUM</p>
            <p class="fs-55 fw-bold encodeSansCondensed color-4">DOLOR SI AMET</p>
            <p class="fs-30 p-t-20 fs-italic text-right encodeSansCondensed color-3">Vincent Jacques</p>
        </div>
    </div>

    <!-- Bloc Logo -->
    <div class="w-100 h-65 bg-img-2">
        <div class="h-95 d-flex flex-direction-column j-c-evenly a-i-center">
            <span class="span-borders-vertical120 d-none-mobile"></span>
            <img class="w-17 h-auto" src="./assets/img/logo_coffeart.png">
        </div>
    </div>

</section>


{% endblock %}