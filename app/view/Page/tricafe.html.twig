                        <img class="w-25 h-auto" src="./assets/img/badge_{{ coffee.COF_COLOR }}.png">
                        <p class="fs-14">{{  coffee.COF_SWEETNESS }}</p>
                        <p class="fs-14">{{  coffee.COF_COUNTRY_ORIGIN }}</p>
                        <p class="fs-14">{{  coffee.COF_OWNER }}</p>
                        <a href="produit/{{coffee.ID}}" class="fs-14">Découvrir notre produit</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        {# Gamme Equilibré #}
        <div>
            <p class="fs-30">Equilibré</p>
            <div class="d-flex p-t-20">
                {% for coffee in sweetness %}
                <div class="d-flex j-c-center w-100">
                    <div class="text-center">
                        <img class="w-25 h-auto" src="./assets/img/badge_{{ coffee.COF_COLOR }}.png">
                        <p class="fs-14">{{  coffee.COF_SWEETNESS }}</p>
                        <p class="fs-14">{{  coffee.COF_COUNTRY_ORIGIN }}</p>
                        <p class="fs-14">{{  coffee.COF_OWNER }}</p>
                        <a href="produit/{{coffee.ID}}" class="fs-14">Découvrir notre produit</a>
                    </div>
