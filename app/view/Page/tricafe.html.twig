<!-- Bloc gammes-->
<section class="bg-color-1 w-100 h-150vh d-flex flex-direction-column j-c-evenly a-i-center">
    <div class="d-flex flex-direction-column h-25 j-c-around text-center">
        <p class="fs-30 color-3 text-decoration-none">Découvrir nos gammes</p>
        <span class="span-borders-v m-l-50p"></span>
        <p class="fs-30">DUO REGES:CONSTRUCTIO INTERRETE.</p>
        <p class="fs-30">NIHILO MAGIS. ROGES ENI</p>
        <p class="fs-30">DOLOR ERGO, ID EST</p>
    </div>
    
    <div class="w-85 h-50 d-flex flex-direction-column j-c-between">

        {# Gamme Doux #}
        <div>
            <p class="fs-30">Doux</p>
            <div class="d-flex p-t-20">
                {% for coffee in sweetness %}
                <div class="d-flex a-i-center j-c-center w-100">
                    <div class="text-center">
                        <img class="w-25 h-auto" src="./assets/img/badge_{{ coffee.COF_COLOR }}.png">
                        <p class="fs-14">{{  coffee.COF_SWEETNESS }}</p>
                        <p class="fs-14">{{  coffee.COF_COUNTRY_ORIGIN }}</p>
                        <p class="fs-14">{{  coffee.COF_OWNER }}</p>
                        <a href="produit/{{coffee.ID}}" class="fs-14">Découvrir notre produit</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        {# Gamme Corsé #}
        <div>
            <p class="fs-30">Corsé</p>
            <div class="d-flex p-t-20">
                {% for coffee in sweetness %}
